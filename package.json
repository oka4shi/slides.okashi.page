{
  "name": "slides-okashi-page",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier --write . ./**/*.astro --plugin=prettier-plugin-astro",
    "lint": "astro check && stylelint **/*.{css,scss,astro} --fix --ignore-path .gitignore",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown --plugin=prettier-plugin-astro",
    "**/*.{css,scss,astro}": "stylelint --fix"
  },
  "dependencies": {
    "@astrojs/check": "^0.6.0",
    "@astrojs/mdx": "^2.3.1",
    "@astrojs/rss": "^4.0.5",
    "@astrojs/sitemap": "^3.1.4",
    "astro": "^4.7.1",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "astro-eslint-parser": "^1.0.2",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "stylelint": "^16.5.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-standard": "^36.0.0"
  }
}
